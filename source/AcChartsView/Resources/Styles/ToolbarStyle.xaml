<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="clr-namespace:Infinity.Controls;assembly=Infinity.MahApps">

	<Style TargetType="{x:Type controls:InfToolbar}">
		<Setter Property="Background" Value="{StaticResource Background.Lighter}" />
		<Setter Property="ShadowDepth" Value="3" />
	</Style>

	<Style TargetType="{x:Type controls:InfToolbarButton}">
		<Setter Property="Foreground" Value="{StaticResource Foreground.Content.Dark}" />
	</Style>
</ResourceDictionary>
