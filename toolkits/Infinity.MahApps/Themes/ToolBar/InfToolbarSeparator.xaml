<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:inf="clr-namespace:Infinity.Controls">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/Infinity.MahApps;component/Themes/Theme.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style TargetType="{x:Type inf:InfToolbarSeparator}" x:Key="Infinity.Style.InfToolbarSeparator">
		<Setter Property="Width" Value="2" />
		<Setter Property="Margin" Value="5,3,5,13" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
		<Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent3}" />
	</Style>
</ResourceDictionary>
