		<!--         <Setter Property="BorderBrush" Value="Transparent" /> -->
		<!--         <Setter Property="Background" Value="Blue" /> -->
		<!--     </Trigger> -->
		<!--     <Trigger Property="IsKeyboardFocused" Value="True"> -->
		<!--         <Setter Property="Background" Value="Blue" /> -->
		<!--         <Setter Property="BorderThickness" Value="2" /> -->
		<!--     </Trigger> -->
		<!-- </Style.Triggers> -->
	</Style>
</ResourceDictionary>
