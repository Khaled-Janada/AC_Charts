<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:inf="clr-namespace:Infinity.Controls">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/Infinity.MahApps;component/Themes/Theme.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style TargetType="{x:Type inf:InfMenu}" BasedOn="{StaticResource MahApps.Styles.Menu}" x:Key="Infinity.Style.InfMenu">
		<Setter Property="FontWeight" Value="Medium" />
	</Style>
</ResourceDictionary>
