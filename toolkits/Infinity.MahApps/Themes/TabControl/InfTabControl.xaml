<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:inf="clr-namespace:Infinity.Controls">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/Infinity.MahApps;component/Themes/Theme.xaml" />
		<ResourceDictionary Source="/Infinity.MahApps;component/Themes/TabControl/TabItem.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style TargetType="{x:Type inf:InfTabControl}" BasedOn="{StaticResource {x:Type TabControl}}"
		   x:Key="Infinity.Style.InfTabControl">
		<Setter Property="FocusVisualStyle" Value="{x:Null}" />
		<Setter Property="ItemContainerStyle" Value="{StaticResource Infinity.Style.TabControl.TabItem}" />
		<Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Accent4}" />
		<Setter Property="Margin" Value="2" />
	</Style>
</ResourceDictionary>
